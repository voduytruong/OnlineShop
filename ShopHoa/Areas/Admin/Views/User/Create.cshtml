@model Models.EntityFrameWork.User

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Header
{
    Thêm người dùng mới
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Nhập thông tin người dùng
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">

