@model Models.EntityFrameWork.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Cập nhật sản phẩm
}
@section jsFooter{
