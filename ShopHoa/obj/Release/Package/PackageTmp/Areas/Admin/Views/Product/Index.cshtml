@model PagedList.IPagedList<Models.EntityFrameWork.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Quản lý danh sách sản phẩm
}
<div class="row">
    <div class="col-lg-12">

        <div class="panel-heading">
            Danh sách sản phẩm
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            @using (Html.BeginForm("Index", "Product", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-md-4">
                            <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-success">Tìm kiếm</button>
                            <a class="btn btn-primary" href="/Admin/Product/Create">Thêm mới</a>
                        </div>
                    </div>
                </div>
            }
            <div class="divTable">
                <div class="divHeading">
                    <div class="Cell">
                        Tên sản phẩm
                    </div>
                    <div class="Cell">
                        Thông điệp
                    </div>
                    <div class="Cell">
                        Chi tiết
                    </div>
                    <div class="Cell">
                        Hình ảnh
                    </div>
                    <div class="Cell">
                        Giá
                    </div>
                    <div class="Cell">
                        Giá khuyến mãi
                    </div>
                    <div class="Cell">
                        Số lượng
                    </div>
                    <div class="Cell">
                        Trạng thái
                    </div>
                    <div class="Cell">
                        #
                    </div>
                </div>
               
                    @foreach (var item in Model)
                    {
                        <div class="Row">
                            <div class="Cell">
                                @item.Name
                            </div>
                            <div class="Cell">
                                <font size="1">@item.Description</font>   
                            </div>
                            <div class="Cell">
                             <font size="1">@item.Detail</font>   
                            </div>
                            <div class="Cell">
                              <img class="thumb1" src="@item.Image" alt="" border="0" />
                            </div>
                            <div class="Cell">
                                @item.Price
                            </div>
                            <div class="Cell">
                                @item.PromotionPrice
                            </div>
                            <div class="Cell">
                                @item.Quantity
                            </div>
                            <div class="Cell">
                                @item.PromotionPrice
                            </div>
                            <div class="Cell">
                                <a href="/Admin/Product/Edit/@item.ProductID">Sửa</a>
                                |
                                @Ajax.ActionLink("Xoá", "Delete", new { @id = item.ProductID }, new AjaxOptions
                           {
                               Confirm = "Bạn có muốn xoá bản ghi này?",
                               OnComplete = "$('#row_" + @item.ProductID + "').remove()",
                               HttpMethod = "Delete"
                           })
                            </div>
                        </div>
                    }

                        
            </div>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div>
